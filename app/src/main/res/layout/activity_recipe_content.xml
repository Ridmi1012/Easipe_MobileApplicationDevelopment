<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.features.AddRecipeActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="34dp"
                android:onClick="redirectToLogin"
                app:srcCompat="@drawable/arrow_back" />

            <ImageView
                android:id="@+id/shareImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="320dp"
                android:layout_marginTop="34dp"
                android:onClick="redirectToLogin"
                app:srcCompat="@drawable/share_svgrepo_com" />

            <ImageView
                android:id="@+id/savedImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="360dp"
                android:layout_marginTop="34dp"
                android:onClick="redirectToLogin"
                app:srcCompat="@drawable/bookmark_svgrepo_com" />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.media3.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:background="#000000"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/textView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe Name"
            android:textAlignment="textStart"
            android:padding="16dp"
            android:textSize="24dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello World sdf askfjh sdkfhkjh kitchilan naughty gaming horror movies superextracailfrigilentexpiliodoious"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/material_on_background_emphasis_high_type" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="10 mintues"
            android:textAlignment="center"/>

        <View
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/material_on_background_emphasis_high_type" />

        <TextView
            android:id="@+id/textView_Method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Ingredients"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Software system design is the process of planning and creating a blueprint for a software application. It involves breaking down a complex problem into smaller, more manageable components. Let's break down the process into simple steps:"/>


        <View
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/material_on_background_emphasis_high_type" />

        <TextView
            android:id="@+id/textView_Addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Method"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Software system design is the process of planning and creating a blueprint for a software application. It involves breaking down a complex problem into smaller, more manageable components. Let's break down the process into simple steps:"/>

        <Button
            android:id="@+id/PublishBtn"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FF9800"
            android:text="Done" />


    </LinearLayout>
</ScrollView>

