<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    tools:context=".view.features.MyRecipesActivity">

    <RelativeLayout
        android:id="@+id/tool_bar_myRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/my_recipe_title"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="61dp"
            android:text="@string/my_recipies"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/material_on_background_emphasis_high_type"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <SearchView
        android:id="@+id/search_myRecipe_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar_myRecipe"
        android:backgroundTint="#FE8C00"
        android:iconifiedByDefault="false"
        android:queryHint="search recipes..." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recipes_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/search_myRecipe_bar">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>

