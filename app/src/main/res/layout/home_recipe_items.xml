<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="10dp"
    android:elevation="4dp"
    app:cardCornerRadius="30dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_receipe_image"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger"/>

        <TextView
            android:id="@+id/home_receipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_receipe_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:text="Burger"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home_bookmark_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/home_receipe_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/bookmark_svgrepo_com" />

        <RatingBar
            android:id="@+id/home_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_receipe_title"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:rating="4.0"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/home_receipe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_bookmark_icon"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="20dp"
            android:text="30 min"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/home_receipe_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_rating_bar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:maxLines="3"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="This burger is"
            android:textSize="15dp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>

