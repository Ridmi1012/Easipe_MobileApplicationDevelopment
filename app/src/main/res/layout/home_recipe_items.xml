<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="4dp"
    app:cardCornerRadius="30dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_receipe_image"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burger"/>

        <TextView
            android:id="@+id/home_receipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_receipe_image"
            android:text="Burger"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/home_receipe_discription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_rating_bar"
            android:text="This burger is"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:maxLines="3"/>


        <ImageView
            android:id="@+id/home_bookmark_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmark_icon"
            android:layout_below="@+id/home_receipe_image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="350dp"/>

        <RatingBar
            android:id="@+id/home_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_receipe_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:numStars="5"
            android:rating="4.0"
            android:stepSize="0.5"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/home_receipe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_below="@+id/home_bookmark_icon"
            android:layout_marginLeft="320dp"
            android:text="30 min"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>

